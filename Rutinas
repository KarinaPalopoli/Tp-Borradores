	// Definición de la estructura Rutina
	type Rutina struct {
	Nombre string
	DuracionTotal int // En minutos 
	EjerciciosIncluidos []Ejercicios
	tipoDeEjercicio [] string
	CaloriasQuemadas int
	NivelDificultad string
	}
	
	// Definición de la estructura Resumen de Rutina
	type Resumen struct {
	CaloriasQuemadasTotales int 
	PuntosDimensión map[string]int // Mapa donde se almacenan los puntos por dimensión (por ejemplo, "Tone", "Cardio", "Balance"...)
	}
	


	//
	//// Crear instancia de Ejercicios


// Crear instancia de Rutina
rutina1 := Rutina{
    Nombre: "Rutina matutina",
    DuracionTotal: 60,
    EjerciciosIncluidos: []Ejercicios{ejercicio1},
}




