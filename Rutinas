// DEFINO LAS ESTRUCTURAS

type Ejercicios struct {
	nombre string
	descripcion string
	tiempoEstimado int // En minutos
	caloriasQuemadas int
	tipoDeEjercicio [] string // Por ejemplo: cardio, tonicidad, balance.
	nivelDificultad string // principiante, intermedio, avanzado...
	}
	
